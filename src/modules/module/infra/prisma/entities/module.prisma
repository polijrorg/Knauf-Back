model Module {
  id         String   @id @default(uuid())
  name       String
  image      String
  language   Language @default(portuguese)
  created_at DateTime @default(now())
  content    Content[]
  campaigns  Campaigns[]
  questions  Questions[]
  quizzes    Quizz[]
}

enum Language {
  portuguese
  english
  spanish
}

model Content {
  id         String   @id @default(uuid())
  module     Module   @relation(fields: [moduleId], references: [id])
  moduleId   String
}

model Campaigns {
  id         String   @id @default(uuid())
  module     Module   @relation(fields: [moduleId], references: [id])
  moduleId   String
}

model Questions {
  id         String   @id @default(uuid())
  module     Module   @relation(fields: [moduleId], references: [id])
  moduleId   String
}

model Quizz {
  id         String   @id @default(uuid())
  module            Module    @relation(fields: [moduleId], references: [id])
  moduleId          String
}
